<% content_for(:title) {"My profile"} %>

<div class="w-full md:w-2/3 mx-auto p-8">
  <div class="py-4">
    <h2 class="text-3xl font-bold mb-2">Your Profile</h2>
    <p class="text-zinc-500">Edit your profile information.</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true,  autocomplete: "name", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, autocomplete: "username", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <div class="flex items-center gap-2">
        <%= f.label :password %>
        <div class="text-sm mb-2 text-zinc-500">(leave blank if you don't want to change it)</div>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full" %>
      <% if @minimum_password_length %>
        <br />
        <div class="help-text"><%= @minimum_password_length %> characters minimum</div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full" %>
      <div class="help-text">Enter your current password to confirm your changes</div>
    </div>

    <div class="actions my-4">
      <%= f.submit "Update", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="my-8">
    <hr class="border-gray-300" />
    <h2 class="text-2xl font-bold my-4">Cancel my account</h2>

    <div>
      <p class="my-2">If you would like to cancel your account, please click the button below. We will be sad to see you go!</p>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-full" %></div>

    <%= link_to "Back", :back, class: "mt-8 underline block" %>
  </div>
</div>
