<% content_for(:title) {"Create your account"} %>

<div class="w-full md:w-1/3 mx-auto p-8">
  <div class="py-4">
    <h2 class="text-3xl font-bold mb-2">Create Your Account</h2>
    <p class="text-zinc-500">Create your account to host private rooms, personalize your room, DM other users, and more!</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "Full name" %>
      <%= f.text_field :name, autofocus: true,  autocomplete: "name", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, autocomplete: "username", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full" %>
    </div>

    <div class="field">
      <div class="flex items-center gap-2">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <div class="mb-2">
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          </div>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full" %>
    </div>

    <div class="actions py-4">
      <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
